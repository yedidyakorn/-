<Window x:Class="PLWPF.GuestRequestWindows.GuestRequestGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.GuestRequestWindows"
        mc:Ignorable="d"
        Title="GuestRequestGrid" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="GrGrid" ItemsSource="{Binding guestRequests}" Margin="0,0,0,244" Height="123" VerticalAlignment="Bottom"></DataGrid>
        <Button x:Name="selectBtn" Content="select" HorizontalAlignment="Left" Margin="376,369,0,0" VerticalAlignment="Top" Width="75" Click="selectBtn_Click"/>

    </Grid>
</Window>
