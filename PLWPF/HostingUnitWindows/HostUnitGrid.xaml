<Window x:Class="PLWPF.HostingUnitWindows.HostUnitGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.HostingUnitWindows"
        mc:Ignorable="d"
        Title="HostUnitGrid" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="HuGrid" ItemsSource="{Binding hostUnits}"  HorizontalAlignment="Left" Height="290" Margin="0,59,0,0" VerticalAlignment="Top" Width="782"/>
        <Button x:Name="selectBtn" Content="select" HorizontalAlignment="Left" Margin="376,369,0,0" VerticalAlignment="Top" Width="75" Click="selectBtn_Click"/>

    </Grid>
</Window>
